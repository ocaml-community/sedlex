(library
 (name sedlex_ppx)
 (public_name sedlex.ppx)
 (kind ppx_rewriter)
 (libraries ppxlib sedlexing_internal)
 (ppx_runtime_libraries sedlex)
 (preprocess
  (pps ppxlib.metaquot))
 (flags
  (:standard -w -9)))

